Subject: [PATCH] improve chat player api: use overload


diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
index 5632676e9e80d46fcad96d47f400246d13143bbf..bcef237a4275f57d425ee418e99c9214e532c92a 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
@@ -665,7 +665,7 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
             if (msg.startsWith("/")) {
                 this.getHandle().connection.handleCommand(msg);
             } else {
-                final PlayerChatMessage playerChatMessage = PlayerChatMessage.system(msg).withResult(new net.minecraft.network.chat.ChatDecorator.ModernResult(Component.literal(msg)));
+                final PlayerChatMessage playerChatMessage = PlayerChatMessage.system(msg).withResult(Component.literal(msg));
                 // TODO chat decorating
                 // TODO text filtering
                 this.getHandle().connection.chat(msg, playerChatMessage, false);
